package checking;

public class LasrgestAndSmallestNo {
	
	public static void main(String[] args)
	{
	
		int a[]= {15, 18, 2, 3, 6, 12};
		System.out.println(countRotations(a,0, a.length-1));
		
	}
	
	public static int countRotations(int a[],int low,int high)
	{
		 if (high < low)
	            return 0;
	 
	        // If there is only one element left
	        if (high == low)
	            return low;
	 
	        // Find mid
	        // /*(low + high)/2;*/
	        int mid = low + (high - low)/2;
	 
	        // Check if element (mid+1) is minimum
	        // element. Consider the cases like
	        // {3, 4, 5, 1, 2}
	        if (mid < high && arr[mid+1] < arr[mid])
	            return (mid + 1);
	 
	        // Check if mid itself is minimum element
	        if (mid > low && arr[mid] < arr[mid - 1])
	            return mid;
	 
	        // Decide whether we need to go to left
	        // half or right half
	        if (arr[high] > arr[mid])
	            return countRotations(arr, low, mid - 1);
	 
	        return countRotations(arr, mid + 1, high);
	    }
	}
	
}

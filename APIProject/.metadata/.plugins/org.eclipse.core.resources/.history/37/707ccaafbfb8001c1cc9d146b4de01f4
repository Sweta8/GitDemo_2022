package sorting;

public class Test {
	
	public static void main(String[] args) {
		
		int a[]= {10,30,1,0,3,4,2,1};
		Test t=new Test();
		
	}
	
	public void quicksort(int a[],int low,int high)
	{
		if(low<high)
		{
			int pos=partition(a, low, high);
			partition(a, pos+1, high);
			partition(a, low, pos-1);
			
		}
	}
	
	public int partition(int a[],int low,int high)
	{
		int pivot=a[low];
		int i=low+1;
		int j=high;
		int temp;
		do
		{
		while(a[i]<=pivot)
		{
			i++;
		}
		
		while(a[j]>=pivot)
		{
			j--;
		}
		}while(i<j)
		
		if(i<j)
		{
			temp=a[i];
			a[i]=a[j];
			a[j]=temp;
		}
		
	}

}

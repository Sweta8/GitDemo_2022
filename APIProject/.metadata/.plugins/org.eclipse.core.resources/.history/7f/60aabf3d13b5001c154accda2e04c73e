package sorting;

public class QuickSort {
	
	public  static void main(String[] args)
	{
		int a[]= {1,3,5,2,1,9,0};
		QuickSort k=new QuickSort();
		k.quicksort(a, 0, a.length-1);
		for(int i=0;i<a.length;i++)
		{
			System.out.println(a[i]+" ");
		}
		
	}
	
	
	int partition(int A[], int low, int high)
	{
	    int pivot = A[low];
	    int i = low + 1;
	    int j = high;
	    int temp;

	    do
	    {
	        while (A[i] <= pivot)
	        {
	            i++;
	        }

	        while (A[j] > pivot)
	        {
	            j--;
	        }

	        if (i < j)
	        {
	            temp = A[i];
	            A[i] = A[j];
	            A[j] = temp;
	        }
	    } while (i < j);

	    // Swap A[low] and A[j]
	    temp = A[low];
	    A[low] = A[j];
	    A[j] = temp;
	    return j;
	}

}

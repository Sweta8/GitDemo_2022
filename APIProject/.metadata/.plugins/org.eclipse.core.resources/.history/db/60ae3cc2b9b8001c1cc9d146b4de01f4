package sorting;

public class Test {
	
	public static void main(String[] args) {
		
		int a[]= {1,4,2,3,8,5,7,1,0};
		int min;
		int temp;
		for(int i=0;i<a.length;i++)
		{
			min=a[i];
			
			for(int j=i+1;j<a.length;j++)
			{
				if(a[j]<a[min])
				{
					min=j;
				}
			}
			
			temp=a[i];
			a[i]=a[min];
			a[min]=temp;
		}
		
		for(int i=0;i<a.length;i++)
		{
			System.out.print(a[i]+" ");
		}
		
	}

}

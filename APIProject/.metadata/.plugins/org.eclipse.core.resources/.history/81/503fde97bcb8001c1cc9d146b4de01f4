package sorting;

public class Test {
	
	public static void main(String[] args) {
		
		int a[]= {1,3,1,0,9};
		int temp;
		int min;
		boolean flag=false;
		
		for(int i=0;i<a.length;i++)
		{
			min=i;
			for(int j=0;j<a.length-1;j++)
			{
				if(a[j]<a[min])
				{
					a[min]=a[j];
				}
			}
			temp=a[i];
			a[i]=a[min];
			a[min]=temp;
			
		}
		for(int i=0;i<a.length;i++)
		{
			System.out.print(a[i]+" ");
		}
		
	}

}

package harness;

import arrays.binarySearch;

public class BinaryArrayCountNoOf1s {
	
	public static void main(String[] args)
	{
		int a[]= {1,1,1,1,1,0,0,0,0};
		int c=binarySearch(a,0,a.length-1);
		System.out.println(c);
		
	}
	
	public static int binarySearch(int a[],int first,int last)
	{
		int mid=0;
		while(first<=last)
		{
			mid=(first+last)/2;
			if(a[mid]<1)
			{
				binarySearch(a, first, mid-1);
			}
			else if(a[mid]>1)
			{
				binarySearch(a, mid+1, last);
			}
			else 
			{
				if(a[mid]==1 || a[mid+1]!=1)
				{
					return mid+1;
				}
				else
				{
					binarySearch(a, mid+1, last);
				}
			}
		}
		return 0;
	}

}

package revision;

public class LinkedList {
	
	Node head;
	
	public void insert(int data)
	{
		Node temp=new Node();
		temp.data=data;
		temp.next=null;
		if(head==null)
		{
			head=temp;
		}
		else
		{
			Node ptr=head;
			while(ptr.next!=null)
			{
				ptr=ptr.next;
			}
			ptr.next=temp;
		}
		
	}
	
	public int show()
	{
		int count=0;
		Node ptr=head;
		while(ptr!=null)
		{
			count++;
			System.out.println(ptr.data);
			ptr=ptr.next;
		}
		return count;
	}
	
	public int valueAtPos(int pos)
	{
		Node ptr=head;
		while(pos!=0)
		{
			ptr=ptr.next;
			pos--;
		}
	}

}

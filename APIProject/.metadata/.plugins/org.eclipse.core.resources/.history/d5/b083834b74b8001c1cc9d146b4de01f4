package sorting;

public class Test {
	
	public static void main(String[] args) {
		
		int x[]= {1,4,2,3,8,5,7,1,0};
		int temp;
		int min=0;
		boolean flag=false;
		for(int i=0;i<x.length;i++)
		{
			min=i;
			for(int j=i+1;j<x.length-1-i;j++)
			{
				if(x[j]<x[min])
				{
					min=j;
				}
			}
			temp=x[i];
			x[min]=x[i];
			x[i]=temp;
			
		}
		
		for(int i=0;i<x.length;i++)
		{
			System.out.print(x[i]+" ");
		}
		
		
	}

}
